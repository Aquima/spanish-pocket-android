<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.PresentActivity" android:background="@color/colorBackground">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <Button
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:background="@drawable/ic_chevron_left"
                android:onClick="backScores" />

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/title_how_is_present"
                android:textAllCaps="false"
                android:textColor="@color/colorDarkGreen"
                android:textIsSelectable="false"
                android:textSize="40sp"
                android:textStyle="bold"
                app:fontFamily="@font/old_standard_tt" />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:gravity="center"
            android:id="@+id/linearLayout2">
        <View
                android:layout_width="142dp"
                android:layout_height="1dp" android:id="@+id/view" android:layout_weight="1"
                android:background="@color/colorDarkLead"/>
        <Button
                android:id="@+id/btn_test_present"
                android:layout_width="33dp"
                android:layout_height="33dp" android:layout_weight="1"/>
        <View
                android:layout_width="142dp"
                android:layout_height="1dp" android:id="@+id/view2" android:layout_weight="1"
                android:background="@color/colorDarkLead"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:id="@+id/linearLayout4"
            >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
            <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp" android:background="@drawable/circle_green"
                    android:id="@+id/imageView5" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/txtFirstPronouns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:text="HABL"
                    android:textColor="@color/colorDarkGreen"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/old_standard_tt"/>
            <TextView
                    android:text="AR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtFirstComplete" android:layout_weight="1"
                    android:textColor="@color/colorLead"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/old_standard_tt" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center"
                android:layout_marginTop="5dp">
            <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp" android:background="@drawable/circle_green"
                    android:id="@+id/imageView6" android:layout_weight="1"/>
            <TextView
                    android:text="COM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSecondPronouns" android:layout_weight="1"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/old_standard_tt"
                    android:layout_marginLeft="6dp" android:textColor="@color/colorDarkGreen"/>
            <TextView
                    android:text="ER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtSecondComplete" android:layout_weight="1"
                    android:textSize="50sp"
                    android:textColor="@color/colorLead"
                    android:textStyle="bold"
                    app:fontFamily="@font/old_standard_tt" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center"
                android:layout_marginTop="5dp">
            <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp" android:background="@drawable/circle_green"
                    android:id="@+id/imageView7" android:layout_weight="1"/>
            <TextView
                    android:text="VIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtThirdPronouns" android:layout_weight="1"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/old_standard_tt"
                    android:layout_marginLeft="6dp" android:textColor="@color/colorDarkGreen"/>
            <TextView
                    android:text="IR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtThirdComplete" android:layout_weight="1"
                    android:textSize="50sp" android:textColor="@color/colorLead"
                    android:textStyle="bold"
                    app:fontFamily="@font/old_standard_tt" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btn_first"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/btn_pronouns"
                    android:onClick="firsthPronouns"
                    android:text="@string/btn_pronouns1"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/cormorant_garamond_semibold_italic"/>
            <Button
                    android:text="@string/btn_pronouns2"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn_second"
                    android:background="@drawable/btn_pronouns" android:layout_marginLeft="13dp"
                    android:textSize="23sp" android:textColor="@color/primaryWhiteColor"
                    android:textStyle="bold"
                    app:fontFamily="@font/cormorant_garamond_semibold_italic"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn_third"
                    android:background="@drawable/btn_pronouns" android:layout_marginLeft="13dp"
                    android:textSize="16sp" android:textColor="@color/primaryWhiteColor" android:textStyle="bold"
                    android:text="@string/btn_pronouns3"
                    app:fontFamily="@font/cormorant_garamond_semibold_italic"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp">
            <Button
                    android:text="@string/btn_pronouns4"
                    android:layout_width="120dp"
                    android:layout_height="120dp" android:id="@+id/btn_quarter"
                    android:background="@drawable/btn_pronouns" android:textSize="16sp"
                    android:textColor="@color/primaryWhiteColor"
                    android:textStyle="bold"
                    app:fontFamily="@font/cormorant_garamond_semibold_italic"/>
            <Button
                    android:text="@string/btn_pronouns5"
                    android:layout_width="120dp"
                    android:layout_height="120dp" android:id="@+id/btn_fifth"
                    android:layout_marginLeft="13dp" android:background="@drawable/btn_pronouns"
                    android:textColor="@color/primaryWhiteColor" android:textSize="16sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/cormorant_garamond_semibold_italic"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
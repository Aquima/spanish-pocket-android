<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/primaryRedColor"
                                             tools:context=".Views.RegisterActivity">

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryRedColor"
        tools:context=".Views.RegisterActivity">
    <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/img_close"
            android:id="@+id/btn_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="330dp"
            android:layout_marginStart="330dp"
            android:onClick="backLogin" tools:ignore="VectorDrawableCompat"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayoutA">

        <TextView
                android:id="@+id/lbl_registertittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_createaccount"
                android:textSize="40sp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primaryWhiteColor"/>
    </LinearLayout>


            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/linearLayoutA"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:text="@string/lbl_registertitle"
                android:id="@+id/lbl_registertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/img_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/primaryWhiteColor"
                android:textSize="50dp"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutA"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/linearLayoutB">

        <EditText
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/txt_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="@string/ph_txt_email"
                android:textSize="15sp"
                android:textColor="@color/primaryWhiteColor"
                android:background="@null"/>
        <View
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="1sp"
                android:background="@color/primaryWhiteColor" />
        <EditText
                android:id="@+id/txt_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/ph_txt_password"
                android:textSize="15sp"
                android:textColor="@color/primaryWhiteColor"
                android:layout_marginBottom="20dp"
                android:background="@null"/>



    </LinearLayout>

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutA"
            android:id="@+id/linearLayoutB">
        <EditText
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txt_email"
                android:hint="@string/ph_txt_email"
                android:textColor="@color/primaryWhiteColor"
                android:textColorHint="@color/primaryWhiteColor"
                android:textCursorDrawable="@drawable/color_cursor_drawable"
                android:background="@null"
                android:layout_marginLeft="20dp"/>
        <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@color/primaryWhiteColor"
                android:layout_marginLeft="15dp"/>

        <EditText
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txt_password"
                android:hint="@string/ph_txt_password"
                android:textColor="@color/primaryWhiteColor"
                android:textColorHint="@color/primaryWhiteColor"
                android:textCursorDrawable="@drawable/color_cursor_drawable"
                android:background="@null"
                android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutB"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/linearLayoutC">

        <Button
                android:text="@string/btn_createaccount"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_createaccount"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/btn_corner_white"
                android:textColor="@color/primaryRedColor"
                android:textAllCaps="false"
                android:minHeight="32dip"
                android:layout_marginBottom="10dp"
                android:onClick="tapToCreateAccount"/>
    </LinearLayout>

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/linearLayoutB"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
            android:id="@+id/linearLayoutC">
        <Button
                android:text="@string/btn_createaccount"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:id="@+id/btn_createaccount"
                android:background="@drawable/btn_corner_white"
                android:textColor="@color/primaryRedColor"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:onClick="tapToCreateAccount"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
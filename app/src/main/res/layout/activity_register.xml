<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryWhiteColor"
        tools:context=".Views.RegisterActivity">
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/img_close"
            android:id="@+id/btn_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="330dp"
            android:layout_marginStart="330dp"
            android:onClick="backLogin" tools:ignore="VectorDrawableCompat" android:scaleType="fitCenter"
            android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/linearLayoutA"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:text="@string/lbl_registertitle"
                android:id="@+id/lbl_registertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/img_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorGreen"
                android:textSize="50dp"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutA"
            android:id="@+id/linearLayoutB">
        <EditText
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txt_email"
                android:hint="@string/ph_txt_email"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/hintTextColor"
                android:textCursorDrawable="@color/colorGreen"
                android:background="@null"
                android:layout_marginLeft="20dp"/>
        <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@color/colorGreen"
                android:layout_marginLeft="15dp"/>

        <EditText
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txt_password"
                android:hint="@string/ph_txt_password"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/hintTextColor"
                android:textCursorDrawable="@color/colorGreen"
                android:background="@null"
                android:layout_marginLeft="20dp"/>
        <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@color/colorGreen"
                android:layout_marginLeft="15dp"/>

        <EditText
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txt_retype_password"
                android:hint="@string/retype_password"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/hintTextColor"
                android:textCursorDrawable="@color/colorGreen"
                android:background="@null"
                android:layout_marginLeft="20dp"/>
        <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@color/colorGreen"
                android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/linearLayoutB"
            android:id="@+id/linearLayoutC">
        <Button
                android:text="@string/btn_createaccount"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:id="@+id/btn_createaccount"
                android:background="@drawable/btn_corner_green_ligth"
                android:textColor="@color/primaryWhiteColor"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/helvetica"
                android:onClick="tapToCreateAccount" android:textStyle="bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
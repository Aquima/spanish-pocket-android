<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.LogInActivity"
        android:background="@color/colorRedColor">
    <ImageView
            android:layout_width="163dp"
            android:layout_height="163dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VectorDrawableCompat"/>
    <LinearLayout
            android:id="@+id/layoutA"
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
    >
        <TextView
                android:text="Â¡Hola!"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="44sp" android:gravity="center_horizontal"/>
        <TextView
                android:text="te damos la bienvenida"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/layoutA"
            android:id="@+id/linearLayout">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                tools:layout_editor_absoluteY="508dp"
                tools:layout_editor_absoluteX="134dp"
                android:id="@+id/editText"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                tools:layout_editor_absoluteY="569dp"
                tools:layout_editor_absoluteX="124dp"
                android:id="@+id/editText2"/>
    </LinearLayout>
    <Button
            android:text="iniciar sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnter" android:layout_marginTop="78dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    android:onClick="tapToSignIn"/>

</android.support.constraint.ConstraintLayout>
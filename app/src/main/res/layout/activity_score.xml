<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".Views.ScoreActivity">

    <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@color/colorAccent"
                android:text="VERBOS"
                android:textColor="@color/colorGreen"
                android:textSize="60sp"
                android:textStyle="bold"
                app:fontFamily="@font/old_standard_tt" />

        <Button
                android:id="@+id/btn_info_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_corner_green_ligth"
                android:onClick="infoScores"
                android:text="@string/title_score"
                android:textColor="@color/primaryWhiteColor"
                android:textSize="16sp"
                android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_present"
                    android:layout_width="270dp"
                    android:layout_height="57dp"
                    android:background="@drawable/btn_score"
                    android:text="@string/btn_present"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    app:fontFamily="@font/old_standard_tt" />

            <TextView
                    android:id="@+id/img_present"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="18sp"
                    app:fontFamily="@font/pavanam" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_simple_past"
                    android:layout_width="270dp"
                    android:layout_height="57dp"
                    android:background="@drawable/btn_score"
                    android:text="@string/btn_simple_past"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    app:fontFamily="@font/old_standard_tt" />

            <TextView
                    android:id="@+id/img_simple_past"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="18sp"
                    app:fontFamily="@font/pavanam" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_pas_imp"
                    android:layout_width="270dp"
                    android:layout_height="57dp"
                    android:background="@drawable/btn_score"
                    android:text="@string/btn_imp_past"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    app:fontFamily="@font/old_standard_tt" />

            <TextView
                    android:id="@+id/img_pas_imp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="18sp"
                    app:fontFamily="@font/pavanam" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_future"
                    android:layout_width="270dp"
                    android:layout_height="57dp"
                    android:background="@drawable/btn_score"
                    android:text="@string/btn_future"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    app:fontFamily="@font/old_standard_tt" />

            <TextView
                    android:id="@+id/img_future"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/primaryWhiteColor"
                    android:textSize="18sp"
                    app:fontFamily="@font/pavanam" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
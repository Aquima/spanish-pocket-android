<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.ScoreActivity">

    <TextView
            android:text="V E R B O S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="56sp" android:textColor="@color/colorGreen"
            android:textStyle="bold"/>
    <TextView
            android:text="Get to 5 or more to change their color!"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/btn_corner_white"
            android:id="@+id/textView2" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="@color/primaryWhiteColor" android:gravity="center"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="524dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="60dp" android:gravity="center_vertical" android:layout_marginBottom="30dp">
            <Button
                    android:text="Presente"
                    android:background="@drawable/btn_dark_green"
                    android:layout_width="240dp"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:textStyle="bold"/>
            <TextView
                    android:text="1"
                    android:background="@drawable/circle_red_score"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp" android:id="@+id/textView3" android:layout_weight="1"
                    android:gravity="center" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="60dp" android:gravity="center_vertical" android:layout_marginBottom="30dp">
            <Button
                    android:text="Pasado Simple"
                    android:background="@drawable/btn_dark_green"
                    android:layout_width="240dp"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:textStyle="bold"/>
            <TextView
                    android:text="0"
                    android:background="@drawable/circle_red_score"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp" android:id="@+id/textView1" android:layout_weight="1"
                    android:gravity="center" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="60dp" android:gravity="center_vertical" android:layout_marginBottom="30dp">
            <Button
                    android:text="Pasado Imp."
                    android:background="@drawable/btn_dark_green"
                    android:layout_width="240dp"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:textStyle="bold"/>
            <TextView
                    android:text="0"
                    android:background="@drawable/circle_red_score"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp" android:id="@+id/textView8" android:layout_weight="1"
                    android:gravity="center" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="60dp" android:gravity="center_vertical">
            <Button
                    android:text="Futuro"
                    android:background="@drawable/btn_dark_green"
                    android:layout_width="240dp"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:textStyle="bold"/>
            <TextView
                    android:text="0"
                    android:background="@drawable/circle_red_score"
                    android:textColor="@color/primaryWhiteColor"
                    android:layout_width="40dp"
                    android:layout_height="40dp" android:id="@+id/textView5" android:layout_weight="1"
                    android:gravity="center" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.ScoreActivity">

    <ImageView
            android:src="@color/colorAccent"
            android:layout_width="322dp"
            android:layout_height="48dp"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="63dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Get to 5 or more to change their color!"
            android:layout_width="322dp"
            android:layout_height="47dp"
            android:id="@+id/textView" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_corner_green_ligth" android:textColor="@color/primaryWhiteColor"
            android:textSize="17sp" android:gravity="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
            <Button
                    android:text="Presente"
                    android:layout_width="270dp"
                    android:layout_height="57dp" android:id="@+id/btn_present"
                    android:background="@drawable/btn_score" android:textColor="@color/primaryWhiteColor"/>
            <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp" android:id="@+id/img_present"
                    android:layout_marginLeft="12dp" android:background="@drawable/circle_red"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" android:layout_marginTop="45dp">
            <Button
                    android:text="Pasado simple"
                    android:layout_width="270dp"
                    android:layout_height="57dp" android:id="@+id/btn_pas_simple"
                    android:background="@drawable/btn_score" android:textColor="@color/primaryWhiteColor"/>
            <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp" android:id="@+id/img_pas_simple"
                    android:layout_marginLeft="12dp" android:background="@drawable/circle_red"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" android:layout_marginTop="45dp">
            <Button
                    android:text="Pasado imp."
                    android:layout_width="270dp"
                    android:layout_height="57dp" android:id="@+id/btn_pas_imp"
                    android:background="@drawable/btn_score" android:textColor="@color/primaryWhiteColor"/>
            <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp" android:id="@+id/img_pas_imp"
                    android:layout_marginLeft="12dp" android:background="@drawable/circle_red"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" android:layout_marginTop="45dp">
            <Button
                    android:text="Futuro"
                    android:layout_width="270dp"
                    android:layout_height="57dp" android:id="@+id/b"
                    android:background="@drawable/btn_score" android:textColor="@color/primaryWhiteColor"/>
            <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp" android:id="@+id/imageView3"
                    android:layout_marginLeft="12dp" android:background="@drawable/circle_red"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>